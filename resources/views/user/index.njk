{% extends "layout" %}

{% block content %}
        <h1 class="page-title">Users</h1>
        <div class="grid-flex">

          {% for user in users %}
            <div class="user__card">
              <div class="user__card-img">
                <img src="http://www.stevensegallery.com/140/100" alt="name" />
              </div>
              <div class="user__card-text">
                <h3 class="user__card-title">{{ user.username }}</h3>
                <p class="user__card-handle">@{{ user.username }}</p>
              </div>
            </div>
          {% endfor %}

        </div>


{% endblock %}
